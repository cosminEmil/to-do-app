<%= form_with(model: [@todo_list, @task], local: true, class: "shadow-sm p-4 border rounded") do |form| %>
  <h3 class="mb-4">
    <%= @task.new_record? ? "Create New Task" : "Edit Task" %> for "<%= @todo_list.title %>"
  </h3>

  <div class="form-group">
    <%= form.label :description, class: "font-weight-bold" %>
    <%= form.text_field :description, class: "form-control", required: true, placeholder: "Enter task description" %>
  </div>

  <div class="form-group mt-3">
    <%= form.label :status, class: "font-weight-bold" %>
    <%= form.select :status, ["Pending", "In Progress", "Completed"], {}, class: "form-control" %>
  </div>

  <div class="form-group mt-3">
    <%= form.submit @task.new_record? ? "Create Task" : "Update Task", class: "btn btn-success btn-block" %>
  </div>
<% end %>

<%= link_to "Back to Todo List", todo_list_path(@todo_list), class: "btn btn-secondary mt-3" %>
