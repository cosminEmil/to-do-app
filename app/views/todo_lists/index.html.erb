<div class="container mt-4">
  <h1 class="mb-3">Your Todo Lists</h1>

  <div class="d-flex justify-content-between mb-3">
    <p class="lead">Manage your tasks efficiently.</p>
    <%= link_to "New Todo List", new_todo_list_path, class: "btn btn-primary" %>
  </div>

  <% if @todo_lists.any? %>
    <div class="list-group">
      <% @todo_lists.each do |list| %>
        <div class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <h5 class="mb-1"><%= link_to list.title, todo_list_path(list), class: "text-decoration-none" %></h5>
          </div>
          <div>
            <%= link_to "Edit", edit_todo_list_path(list), class: "btn btn-sm btn-warning mx-1" %>
            <%= button_to "Delete", todo_list_path(list), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">You don't have any Todo Lists yet. Start by creating one!</p>
  <% end %>

  <%= link_to "Back to the Dashboard", dashboard_path, class: "btn btn-primary"%>
</div>
