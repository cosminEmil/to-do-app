<%= form_with(model: @todo_list, local: true, class: "shadow-sm p-4 border rounded") do |form| %>
    <h3 class="mb-4">
      <%= @todo_list.new_record? ? "Create New Todo List" : "Edit Todo List" %>
    </h3>
  
    <div class="form-group">
      <%= form.label :title, class: "font-weight-bold" %>
      <%= form.text_field :title, class: "form-control", required: true, placeholder: "Enter todo list title" %>
    </div>
  
    <div class="form-group mt-3">
      <%= form.submit @todo_list.new_record? ? "Create Todo List" : "Update Todo List", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
  
  <%= link_to "Back to Todo Lists", todo_lists_path, class: "btn btn-secondary mt-3" %>
  