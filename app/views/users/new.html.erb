<div class="container">
  <div class="row justify-content-center">
    <div class="col-5">
      <div class="mt-3">
        <h1>Sign Up</h1>
      </div>

      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <h4>Oops! There were some problems with your submission:</h4>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, url: signup_path do |form| %>
        <div class="form-group row mt-3">
          <%= form.label :email_address, "Email" %>
          <%= form.text_field :email_address, class: "form-control", placeholder: "Enter your email address" %>
        </div>

        <div class="form-group row mt-3">
          <%= form.label :password, "Password" %>
          <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>

        <div class="form-group row mt-3">
          <%= form.label :password_confirmation, "Confirm password" %>
          <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Please enter the password again" %>
        </div>
        
        <div class="form-group row mt-3">
          <%= recaptcha_tags %>
        </div>

        <div class="form-group row mt-3">
          <%= form.submit "Sign Up", class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="mt-3">
        <p>Already have an account? <a href="<%= new_session_path %>">Sign In</a></p>
      </div>
    </div>
  </div>
</div>
